<header class="flex items-center justify-between px-4 py-3 bg-gray-600">
  <div>
    <h1 class="ml-8 font-bold text-2xl text-gray-300">RevYou!</h1>
  </div>
  <div class="relative" data-controller="dropdown">
    <div data-action="click->dropdown#toggle click@window->dropdown#hide" role="button" class="inline-block select-none">
  <div class="inline-block text-sm px-4 py-2 leading-none rounded no-underline text-gray hover:text-gray-900 hover:bg-white mt-4 lg:mt-0">
      <span class="appearance-none flex items-center inline-block text-gray-700">
    <button type="button" class="block text-gray-500 focus:text-black focus:outline-none">
      <svg class="h-6 w-6 fill-current" viewBox="0 0 24 24">
        <path fill-rule="evenodd" d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"/>
      </svg>
    </button>
      </span>
    </div>
    <div data-target="dropdown.menu" class="absolute right-0 mt-2 hidden">
      <div class="bg-white shadow rounded border overflow-hidden relative z-10">
          <%= link_to 'ToDos',  todos_path, class: 'no-underline block pl-8 py-3 text-gray-900 bg-white hover:bg-gray-300 whitespace-no-wrap' %>
          <%= link_to 'Journal', journal_entries_path, class: 'no-underline block px-8 py-3 text-gray-900 bg-white  hover:bg-gray-300 whitespace-no-wrap' %>
      </div>
    </div>
  </div>
</div>
</header>
